extends ../layouts/example.jade
block source
  a(name="Html" index=3)
  viewcode
  a(name="Css")
  style.
    .spritespin {
      width: 250px;
    }
    @media (min-width: 500px) {
      .spritespin {
        width: 450px;
      }
    }
    @media (min-width: 900px) {
      .spritespin {
        width: 700px;
      }
    }  
  a(name="Javascript")
  script(type='text/javascript').
    $(function(){
      $('.spritespin').spritespin({
        //source: '/images/bike6x6_big.jpg',
        //frames: 34,
        //framesX: 6,
        width: 200,
        height: 200,
        source: SpriteSpin.sourceArray('/images/rad_zoom_{frame}.jpg', { frame: [1,34], digits: 3 }),
        sense: -1,
        responsive: true
      });
    });
