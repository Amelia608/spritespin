extends layouts/example.jade
block html
  .spritespin
  a#go-fullscreen(href='') Fullscreen
block script
  script(type='text/javascript').
    $(function(){
      $('a#go-fullscreen').click(function(){
        $('.spritespin').spritespin('api').requestFullscreen();
      });
      $('.spritespin').spritespin({
        source: SpriteSpin.sourceArray('images/rad_zoom_{frame}.jpg', { frame: [1,34], digits: 3 }),
        width: 240,
        height: 164,
        sense: -1,
        mods: ['move', 'zoom', '360'],
        autostart: false
      });
    });
